<div class="row">
  <% %w(blue gray green red).each do |badge_color| %>
      <div class="col-md-3">
        <div class="box">
          <div class="box-header">
            <span class="title">Some title</span>
            <ul class="box-toolbar">
              <li><span class="label label-<%= badge_color %>">178</span></li>
            </ul>
          </div>

          <div class="box-content padded">some content</div>
        </div>
      </div>
  <% end %>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="box">
      <div class="box-header">
        <span class="title">Box with iButton</span>
        <ul class="box-toolbar">
          <li>
            <input class="iButton-icons" type="checkbox" checked="checked" />
          </li>
        </ul>
      </div>

      <div class="box-content padded">
        <span class="title">some content here</span>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="box">
      <div class="box-header">
        <span class="title">Search</span>
        <ul class="box-toolbar">
          <li>
            <form class="fill-up" style="width: 100px">
              <label class="input-with-submit">
                <input type="text" placeholder="Search..."/>
                <button type="submit" class="submit-icon">
                  <i class="icon-search"></i>
                </button>
              </label>
            </form>
          </li>
        </ul>
      </div>

      <div class="box-content padded">
        <span class="title">some content here</span>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="box">
      <div class="box-header">
        <span class="title">Form</span>
        <ul class="box-toolbar">
          <li>
            <form class="fill-up" style="width: 100px">
              <label class="input-with-submit">
                <input type="text" placeholder="Insert coin..."/>
                <button type="submit" class="submit-icon">
                  <i class="icon-angle-right"></i>
                </button>
              </label>
            </form>
          </li>
        </ul>
      </div>

      <div class="box-content padded">
        <span class="title">some content here</span>
      </div>
    </div>
  </div>

</div>
