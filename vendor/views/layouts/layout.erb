<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">

  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">

  <!-- Use title if it's in the page YAML frontmatter -->
  <title><%= data.page.title || 'Core Admin Theme' %></title>

  <%= stylesheet_link_tag 'application' %>

  <%= javascript_include_tag  'application' %>
</head>



<body>
<%= partial 'layouts/top_navigation_bs3' %>
<%= partial 'layouts/side_navigation' %>

<div class="main-content">
  <div class="container">
    <div class="row">

      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title">
            <i class="<%= crumbs[:secondary][:icon] %>"></i>
            <%= crumbs[:secondary][:label] %>
          </h3>
          <h5>
            <span>
              A subtitle can go here
            </span>
          </h5>
        </div>

        <ul class="list-inline pull-right sparkline-box">

          <li class="sparkline-row">
            <h4 class="blue"><span>Orders</span> 847</h4>
            <div class="sparkline big" data-color="blue"><!--<%= random_numbers(12).join(",") %>--></div>
          </li>

          <li class="sparkline-row">
            <h4 class="green"><span>Reviews</span> 223</h4>
            <div class="sparkline big" data-color="green"><!--<%= random_numbers(12).join(",") %>--></div>
          </li>

          <li class="sparkline-row">
            <h4 class="red"><span>New visits</span> 7930</h4>
            <div class="sparkline big"><!--<%= random_numbers(12).join(",") %>--></div>
          </li>

        </ul>
      </div>
    </div>
  </div>

  <div class="container padded">
    <div class="row">

      <!-- Breadcrumb line -->

      <div id="breadcrumbs">
        <div class="breadcrumb-button blue">
          <span class="breadcrumb-label"><i class="icon-home"></i> Home</span>
          <span class="breadcrumb-arrow"><span></span></span>
        </div>

        <% if link_level == 2 %>
            <div class="breadcrumb-button">
              <span class="breadcrumb-label">
                <i class="<%= crumbs[:primary][:icon] %>"></i> <%= crumbs[:primary][:label] %>
              </span>
              <span class="breadcrumb-arrow"><span></span></span>
            </div>
        <% end %>

        <div class="breadcrumb-button">
          <span class="breadcrumb-label">
            <i class="<%= crumbs[:secondary][:icon] %>"></i> <%= crumbs[:secondary][:label] %>
          </span>
          <span class="breadcrumb-arrow"><span></span></span>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>
</div>

</body>
</html>
