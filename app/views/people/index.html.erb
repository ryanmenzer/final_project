<div class="container">
  <div class="row">
    <div class="area-top clearfix">
      <div class="pull-left header">
        <h3 class="title">


          <% if current_page?('/people?cat=3') %>
             <i class="icon-trophy"></i>
             <%= 'Supporters' %>
          <% elsif current_page?('/people?cat=2')%>
            <i class="icon-user"></i>
            <%= 'All People' %>
          <% elsif current_page?('/people?cat=1')%>
            <i class="icon-key"></i>
            <%= 'Staff' %>
          <% end %>

        </h3>
      </div>
    </div>
  </div>

  <div class="title">

    <table class="table table-normal">
      <thead>
        <tr class="">
          <td>Name</td>
          <td>Gender</td>
          <td>Category</td>
        </tr>
      </thead>
      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><a href="people/<%= person.id %>"><%= person.full_name %></a></td>
            <td><a href="people/<%= person.id %>"><%= person.gender %></a></td>
            <td><a href="people/<%= person.id %>"><%= person.category.name %></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<%= will_paginate @people %>
</div>
<div>

</div>
</div>
