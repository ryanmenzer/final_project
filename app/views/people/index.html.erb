<div class="container">
  <div class="row">
    <div class="area-top clearfix">
      <div class="pull-left header">
        <h3 class="title">


          <% if current_page?('/people?cat=3') %>
             <i class="icon-trophy"></i>
             <%= 'Supporters' %>
          <% elsif current_page?('/people?cat=2')%>
            <i class="icon-user"></i>
            <%= 'All People' %>
          <% elsif current_page?('/people?cat=1')%>
            <i class="icon-key"></i>
            <%= 'Staff' %>
          <% end %>

        </h3>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
    <div class="box">
      <div class="box-header">
        <span class="title">People</span>
        <ul class="box-toolbar">
          <li><span class="label label-green"><%= @people.count %> people</span></li>
        </ul>
      </div>
      <div class="box-content">
        <table class="table table-normal">
          <thead>
          <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Gender</td>
            <td>Date of Birth</td>
            <td>Age</td>
            <td>Category</td>
            <td style="width: 40px"></td>
          </tr>
          </thead>

          <tbody>
            <% @people.each do |person| %>
            <tr class="status-pending">
              <td><%= person.full_name %></td>
              <td><%= person.email %></td>
              <td><%= person.gender %></td>
              <td><%= person.date_of_birth %></td>
              <td>33</td>
              <td><%= person.category.name %></td>
              <td>
                <div class="btn-group">
                  <button class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown"><i class="icon-cog"></i></button>
                  <ul class="dropdown-menu">
                    <li><a href="#create-email" data-toggle="modal">Email person</a></li>
                    <li><a href="" data-toggle="modal">Edit person</a></li>
                    <li><a href="" data-toggle="modal">Show profile</a></li>

                    <li class="divider"></li>
                    <li><a href="#">Delete person</a></li>
                  </ul>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @people %>
      </div>
    </div>


    </div>
      <div class="col-md-4">
        <div class="box">
          <div class="box-header">
            <span class="title">Actions</span>
          </div>
          <div class="padded">
            <div class="action-nav-normal action-nav-line">
              <div class="row action-nav-row ">
                <div class="col-sm-6 action-nav-button">
                  <a href="#new-person" title="Add Person">
                    <i class="icon-user"></i>
                    <span>Add Person</span>
                  </a>
                  <span class="triangle-button green"><i class="icon-plus"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div>

</div>
</div>
