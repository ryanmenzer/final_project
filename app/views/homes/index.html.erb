<div class="container">

  <div class="row">

    <div class="area-top clearfix">
      <div class="pull-left header">
        <h3 class="title">
          <i class="icon-dashboard"></i>Dashboard
        </h3>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="box">
        <div class="box-header">
          <span class="title"><i class="icon-comment-alt="></i> CURRENT STATS</span>
        </div>
        <div class="box-content padded">People:
        </div>
        <div class="box-content padded">Workers:
        </div>
        <div class="box-content padded">Sponsors:
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="box">
        <div class="box-header">
          <span class="title"><i class="icon-comment-alt="></i> MOST RECENT INITIATIVE</span>
        </div>
        <div class="box-content padded"><%= link_to @initiative.title, @initiative, :method => :get %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="box">
      <div class="box-header">
        <span class="title">STORIES</span>
      </div>
      <div class="box-content scrollable" style="height: 300px; overflow-y: auto">
        <!-- find me in partials/news_with_icons -->

        <% @stories.each do |s| %>
        <div class="box-section news with-icons">
          <div class="avatar blue"><i class="icon-ok icon-2x"></i></div>
          <div class="news-time">
            <span><%= s.updated_at.strftime("%d") %></span> <%= s.updated_at.strftime("%B") %>
          </div>
          <div class="news-content">
            <div class="news-title"><a href="#"><%= s.title %></a></div>
            <div class="news-text">
              <%= s.content %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
