Receivers:
<br>
<% @sponsorship.receivers.each do |s| %>
  <% if s.receiverable_type == "Person" %>
    <%= s.receiverable.full_name %>
  <% elsif s.receiverable_type == "Project" %>
    <%= s.receiverable.name %>
  <% end %>
<% end %>
<br>
<br> 
Sponsors: <br>
  <% @sponsorship.sponsors.each do |t| %>
    <%= t.full_name %>
  <% end %>
<br>
<br> 
Transactions: <br>
<% @sponsorship.transactions.each do |t| %>
  date: <%= t.date %> <br> 
  sponsor: <%= t.payer.full_name  %> <br>
  amount: <%= t.amount %> <br>
    <%= link_to 'Destroy', transaction_path(t), :class => "inline btn btn-lg btn-red", :confirm => 'Are you sure?', :method => :delete %> 
    <%= link_to "Edit", edit_transaction_path(t, sponsorship_id: @sponsorship.id, transaction_type_id: 0), :class => "inline btn btn-lg btn-blue", :controller => :transactions, :method => :get %>
  <br>
<% end %>
<br> 
<%= link_to 'Create Transaction', new_transaction_path(sponsorship_id: @sponsorship.id, transaction_type_id: 0), :class => "btn btn-blue"%>


