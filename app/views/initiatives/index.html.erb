<div class="container">
<div class="box-header">

  <div class="title">
  	<h3>Initiatives</h3>
    <table class="table table-hover">
      <thead>
        <tr class="info">
          <td>Title</td>
          <td>Description</td>
          <td>Goal</td>
          <td>Start Date</td>
          <td>End Date</td>
        </tr>
      </thead>
      <tbody>
        <% @initiatives.each do |i| %>
          <tr>
            <td><%= link_to i.title, initiative_path(i) %></a></td>
            <td><%=h truncate(i.description, :length => 50) %></a></td>
            <td><%= i.goal %></a></td>
            <td><%= i.start_date %></a></td>
            <td><%= i.end_date %></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
<div>

</div>
</div>
