<div class="container">

    <div class="row">

      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title">
            <i class="icon-bullhorn"></i>
            <%= @initiative.title %>
          </h3>
          <h5>
            <span>
            	<% if @initiative.active == true %>
              	<%= "ACTIVE" %>
              <% else %>
              	<%= "inactive" %>
              <% end %>
            </span>
          </h5>
        </div>
      </div>
