										<tr><td><%= Project.find(r.receiverable_id).name %></td>
									<% end %>
								<% end %>
				      </tbody>
				    </table>
	          </div>
	          <div class="tab-pane" id="settings">Sponsorships</div>
	        </div>
	      </div>
