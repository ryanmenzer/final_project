				        <td>Nationality</td>
				      </tr>
				      </thead>
				      <tbody>
				      <% @receivers.each do |r| %>
									<% if r.receiverable_type == "Person" %>
										<tr><td><%= Person.find(r.receiverable_id).full_name %></td>
											<td><%= Person.find(r.receiverable_id).gender %></td>
											<td><%= Person.find(r.receiverable_id).nationality %></td>
									<% end %>
								<% end %>
				      </tbody>
				    </table>
						</div>
	          <div class="tab-pane" id="messages">
	          	
	          	<table class="table table-normal">
				      <thead>
