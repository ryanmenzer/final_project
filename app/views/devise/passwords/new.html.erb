<div class="container">

  <div class="row-fluid well" style="margin-top: 70px; margin-left: 0px;">
       <div class="span5 offset2">
          <center><%= image_tag('oliwi-logo-wide.png', :size => "360x70") %></center>
       </div>
  </div>

<div class="col-md-4 col-md-offset-4">

<div class="padded">
<div class="login box" style="margin-top: 80px;">

<div class="box-header">
   <span class="title">Forgot your password?</span>
</div>

<div class="box-content padded">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "separate-sections"}) do |f| %>
  <%= devise_error_messages! %>

<div class="input-group addon-left">
    <span class="input-group-addon" href="#">
      <i class="icon-user"></i>
    </span>
    <%= f.email_field :email, placeholder: "email" %>
  </div>


  <div><%= f.submit "Send me reset password instructions", class: "btn btn-default btn-block" %>
  </div>
<% end %>


  <%= render "devise/shared/links" %>

</div>
</div>
</div>
</div>
</div>

