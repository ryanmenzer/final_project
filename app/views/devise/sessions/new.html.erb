<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "separate-sections"}) do |f| %>

  <div class="input-group addon-left">
    <span class="input-group-addon" href="#">
      <i class="icon-user"></i>
    </span>
    <%= f.email_field :email, placeholder: "email" %>
  </div>

  <div class="input-group addon-left">
    <span class="input-group-addon" href="#">
      <i class="icon-key"></i>
    </span>
    <%= f.password_field :password, placeholder: "password" %>
  </div>


  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>


  <div><%= f.submit "Login", class: "btn btn-blue btn-block" %><i class='icon-signin'></i></div>
<% end %>

<%= render "devise/shared/links" %>

        <div>
          <a href="sign_up.html">
              Don't have an account? <strong>Sign Up</strong>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
