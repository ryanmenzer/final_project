  <div class="row">
    <div class="area-top clearfix">
      <div class="pull-left header">
        <h3 class="title">
          <i class="icon-edit"></i>
          Write Story
        </h3>
      </div>
    </div>
  </div>

    <div class="box-content">

      <%= form_for @story, class: "fill-up" do |f| %>
        <p>
          <%= f.label :"Story Title" %><br>
          <%= f.text_field :title %>
        </p>
        <p>
          <%= f.label :"Story Content" %><br>
          <%= f.text_area :content %>
        </p>
          <%= check_box_tag :send_email %>
          <%= label_tag "Send this email to sponsors" %>
        <p>
          <%= f.hidden_field :author_id %>
          <%= f.hidden_field :storyable_id %>
          <%= f.hidden_field :storyable_type %>
          <%= submit_tag "Save Story", :name => 'save_button', class: "btn btn-blue" %>
        </p>
      <% end %>
  </div>
</div>
</div>
